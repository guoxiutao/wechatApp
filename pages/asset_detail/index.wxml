    <!--pages/productDetail/index.wxml-->
<wxs src="../../public/publicFun.wxs" module="publicFun"></wxs>
<view class='container'>

<view class='SwiperContainer'>
    <swiper class='SwiperIndex' autoplay="true" interval="5000" duration="500" bindchange="swiperChange">
      <block wx:for="{{imgArr}}"  wx:key="{{swiper}}" style="border-radius: 20rpx">
        <swiper-item data-imageUrl='{{imgArr}}' data-index='{{index}}' bindtap='lookBigImage' style="border-radius: 20rpx">
          <image mode='aspectFit' src="{{item.icon}}?x-oss-process=style/normal"  style="border-radius: 20rpx" />
        </swiper-item> 
      </block>
    </swiper>
    <view class='swiperItemIndex'>{{swiperIndex}}/{{totalImg}}</view>
    <block wx:if="{{spaceData.promotionBean}}">
      <view class='timeCountDownBg' style='background:linear-gradient(116deg,{{setting.platformSetting.secondColor}} 0%,{{color}} 100%);' wx:if="{{spaceData.promotionBean.promotionStatus==1}}"></view>
      <view class='timeCountDownBg' style='background:linear-gradient(116deg,#eee 0%,#999 100%);' wx:else></view>
      <view class='timeCountDown' wx:if="{{spaceData.promotionBean.promotionStatus!=0}}">
        <image class='timeLeftImg' src='http://image.tunzai.vip/tunzai/2018_8/29/10/29/14_880.jpg' wx:if="{{spaceData.promotionBean.promotionStatus==1}}"></image>
        <image class='timeLeftImg' src='http://image.tunzai.vip/tunzai/2018_9/12/17/6/41_92.jpg' wx:else></image>
        <view class='timeItem'><text class='timeText'>距结束仅剩</text><time wx:if="{{spaceData!=null}}" data="{{spaceData.promotionBean.endDate}}"></time></view>
      </view>
    </block>
  </view>  
 
  <view class='ProductDetailInfoContainer' style='position: relative;'>
    <view class='InfoName' >
      <text>{{spaceData.name}}</text>
      <view class='share_product' bindtap='showPoster'><image src='http://image.tunzai.vip/tunzai/2018_8/28/9/48/50_64.jpg'></image></view>
    </view>
    <block wx:if='{{!!spaceData.description}}'>
      <view class='InfoSubName '>·{{spaceData.description}}</view>
    </block>
  </view>
<!-- <view class='helpBlank'></view> -->
    <!-- 导航 -->
    <view class='navigation_to_map' wx:if='{{spaceData.latitude&&spaceData.latitude!=0}}'>
      <view class='navigation_addr'>
        <image class='navigation_addr_img' src='http://image1.sansancloud.com/xianhua/2018_9/13/17/57/21_219.jpg?x-oss-process=style/preview_120'></image>
        <text class='navigation_addr_value'>{{spaceData.province}}{{spaceData.city}}{{spaceData.area}}{{spaceData.address}}</text>
      </view>
      <view class='navigation_button' style='background:{{setting.platformSetting.defaultColor}}' bindtap='clickCatch'>
        <image class='navigation_button_img' src='http://image1.sansancloud.com/xianhua/2018_9/13/21/22/3_772.jpg?x-oss-process=style/preview_120'></image>
        <text class='navigation_button_value'>位置</text>
      </view>
    </view>
    <!-- 资产类型 -->
    <view class='assets_type_list'>
      <scroll-view class='assetsType_content' scroll-x>
          <text class='assetsType_item' data-link="asset_type_list.html?assetTypeId={{assetType.id}}&spaceId={{spaceData.id}}" wx:if="{{spaceData.assetTypes}}" wx:for='{{spaceData.assetTypes}}' wx:for-item="assetType" catchtap='tolinkUrl'>{{assetType.name}}</text>
        </scroll-view>
    </view>

    <!-- 首页组件-私有产品详情装饰-->
    <view style='margin-top:20rpx;'>
     <component-tag-customPage data="product_detail_{{spaceData.productId}}" wx:if="{{spaceData.productId}}"></component-tag-customPage> 
    </view>
    <import src="../../wxParse/wxParse.wxml"/><!-- 富文本 -->
    <view class='product_main_info' wx:if="{{spaceData.description.description!=''&&spaceData.description.description!='<p><br></p>'}}"><text>图文详情</text></view>
    <view class="tab_detail_container" wx:if="{{spaceData.description.description!=''&&spaceData.description.description!='<p><br></p>'}}">
       <view class='wxParseHtmlContainer'> <template is="1" data="{{wxParseData:article.nodes}}"></template> </view>
    </view>

</view>



<posters proId="{{proId}}" shopId="{{shopId}}" ewmImgUrl='{{qrCodeUrl}}'  wx:if='{{posterState}}' bind:closePoaster="getChilrenPoster"></posters> 
<pintuan pintuanParam="{{pintuanParam}}" wx:if='{{pintuanPopupState}}' bind:closePintuan="getChilrenPintuan" bind:goPintuan='readyPay2'></pintuan> 
 <!-- 首页组件-公共产品详情装饰-->
 <component-tag-customPage data="productdetail"></component-tag-customPage> 
